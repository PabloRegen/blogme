extends ../layouts/layout

block title
	|homepage

block content
	article.homepage
		div.imageHolder
			h1 Create your blog. Share your stories
			img(src='/images/homepage.jpg' alt='Homepage image')
		div.readingWidth
			h3 Whether you'd like to share your expertise, experiences or whatever is on your mind
			ul
				li 
					i.icon-check
					|  Post anything
				li
					i.icon-check
					|  Share your passions
				li 
					i.icon-check
					|  Discover
				li
					i.icon-check
					|  Follow people
				li 
					i.icon-check
					|  Like posts
			h4 Check the latest posts
			ul
				each post in posts
					div.userInfo
						if post.ownerPic != null
							img.userPic(src=`/uploads/${post.ownerPic}`)
						else
							img.userPic(src='/images/avatar.jpg')
						div: a(href=`/posts/${post.slug}`)= post.title
						div.postedAt #{moment(post.postedAt).format('ll')}
						div by #{post.owner}
						div.clear