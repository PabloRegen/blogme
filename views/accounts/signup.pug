extends ../layouts/layout

block title
	|signup

block content
	mixin field(title)
		p.title #{title}
			input&attributes(attributes)
			if errors[attributes.name] != null
				p.invalid #{errors[attributes.name].message}
				
	form.sign(action='/accounts/signup' method='post')
		legend Sign up
		+field('Username')(type='text', name='username' value=body.username)
		+field('Email')(type='text', name='email' value=body.email)
		+field('Password (minimum 8 characters)')(type='password', name='password' value=body.password)
		+field('Confirm password')(type='password', name='confirm_password' value=body.confirm_password)
		input(type='submit' value='Sign up')
		p.title.textAlignCenter #[span.asterisk *****] Please read our #[a(href='/about') #[span.redText about page]] before signing up! #[span.asterisk *****]

	p.signQuery Have an account?
		a(href='/accounts/signin')  Login