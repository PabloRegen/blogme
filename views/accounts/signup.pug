extends ../layouts/layout

block title
	|signup

block content
	mixin field(title)
		p.title #{title}
			input&attributes(attributes)
			if errors[attributes.name] != null
				p.invalid #{errors[attributes.name].message}
				
	form.sign.border1SolidGrey.flex-column(action='/accounts/signup' method='post')
		legend Sign up
		+field('Username')(type='text', name='username' value=body.username)
		+field('Email')(type='text', name='email' value=body.email)
		+field('Password')(type='password', name='password' value=body.password)
		+field('Confirm password')(type='password', name='confirm_password' value=body.confirm_password)
		input(type='submit' value='Sign up')
		p.title By creating an account you agree to our Terms of Service

	p.signQuery Have an account?
		a(href='/accounts/signin')  Login