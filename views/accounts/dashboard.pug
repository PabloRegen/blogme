extends ../layouts/layout

block title
	|dashboard

block content
	article.dashboard
		div.readingWidth
			h1 Dashboard
			a.newPost.greenButton(href='/posts/create') Start new post
			
			h2 Your latest posts
			ul
				each post in latestPosts
					li
						div: a(href=`/posts/${post.slug}`)= post.title
						if post.subtitle != null
							div #{post.subtitle}
						div #{moment(post.postedAt).format('ll')}

				else
					li You have no posts yet

			h2 Your posts and images
			div.userPostAndImages.flex-row
				a(href='/posts/overview') Posts
				a(href='/uploads/overview/1') Current images
				a(href='/uploads/overview/1?deleted=1') Deleted images

			h2 Your stats
			p.
				likes #{likes} |
				liking #{liking} |
				followers #{follows} |
				following #{following}

			form(action='/accounts/delete' method='post')
				input.deleteAccount.redButton(type='submit' value='Delete account')

			if currentUser.role > 1
				h2 Admins only
				p
					a.linkStyle(href='/accounts/users/change-password/admin') Update user password
