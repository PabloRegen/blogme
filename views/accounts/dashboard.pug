extends ../layouts/layout

block title
	|dashboard

block content
	h1 Dashboard
	p Hi #{currentUser.username}
		if currentUser.name != null
			|
			|AKA #{currentUser.name}
		else
			|
			|AKA mistery person
	p
		a(href='/posts/create') Create a new post
	p Your latest posts:
		ul
			each post in latestPosts
				li: a(href=`/posts/${post.id}`)= post.title
			else
				li You have no posts yet
	
	<br/> <br/>

	p Your messages
	p Your visitors
	p Your most common referrers
	p People following you
	p People you are following

	form(action='/accounts/delete' method='post')
		p
			input(type='submit' value='Delete account')