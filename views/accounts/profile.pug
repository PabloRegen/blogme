extends ../layouts/layout

block title
	|profile

block content
	div.readingWidth.paddingBottom30
		h1.textAlignCenter Your profile

		if currentUser.pic != null
			img.userAvatar(src=`/uploads/${currentUser.pic}`)
			form.marginTop20(action='/accounts/profile' method='post')
				input.customButton.danger(type='submit' value='Delete picture')
		else
			img.userAvatar(src='/images/avatar.jpg')
			p (#[span.asterisk  *] You can provide your own avatar or picture by editing your profile)

		p Name:
			if currentUser.name != null
				|  #{currentUser.name}
			else 
				|  N/A

		p Bio:
			if currentUser.bio != null
				|  #{currentUser.bio}
			else 
				|  N/A
		
		a.customButton(href='/accounts/profile/edit') Edit profile