extends ../layouts/layout

block title
	|signin

block content
	h1 Sign in
	form(action='/accounts/signin' method='post')
		p(class={invalid: errors.usernameOrEmail != null}) Username or Email <br/>
			input(type='text' name='usernameOrEmail')
			if errors.usernameOrEmail != null
				| <br/> #{errors.usernameOrEmail.message}
		p(class={invalid: errors.password != null}) Password <br/>
			input(type='password' name='password')
			if errors.password != null
				| <br/> #{errors.password.message}
		p
			input(type='checkbox' name='stay_signed' checked)
			|Remember me
			|- Forgot password? (link)
		p
			input(type='submit' value='Sign in')
		p Don't have an account?
			|
			|
			a(href='/accounts/signup') Sign up Â»