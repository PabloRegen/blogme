extends ../layouts/layout

block title
	|posts overview

block content

	mixin postDetails(post)
		div: a(href=`/posts/${post.slug}`)= post.title
		div #{post.subtitle}
		if post.deletedAt != null
			div deleted #{post.deletedAt}
		div posted #{post.postedAt}
		if post.updatedAt != null
			div updated #{post.updatedAt}
		| #{post.likes} likes
		if post.isVisible
			|  - visible
		else
			|  - not visible
		if post.isDraft
			|  - draft
		else
			|  - not draft

	h1 Posts overview
	h2 Your posts
	ul
		each post in posts
			+postDetails(post) 
		else
			div You don't have any current posts